<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/color_bg"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".mainViewFragment.GuestHomeFragment">

  <RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="120dp"
	  android:background="@color/colorPrimary">

	  <ImageView
		android:layout_width="350dp"
		android:layout_height="250dp"
		android:scaleType="fitXY"
		android:src="@drawable/ic_location"
		android:tint="#A603A9F4">

	  </ImageView>

	</LinearLayout>

<!--	  <ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">-->

		<LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:orientation="vertical">
		  <androidx.cardview.widget.CardView
			android:id="@+id/cv_user_top"
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:layout_margin="16dp"
			android:clickable="true"
			android:focusable="true"
			android:foreground="?android:attr/selectableItemBackground"
			app:cardCornerRadius="16dp"
			app:cardElevation="4dp"
			app:contentPadding="0dp">

			<ImageView
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:adjustViewBounds="true"
			  android:cropToPadding="true"
			  android:scaleType="centerCrop"
			  android:tint="#59000000"
			  app:srcCompat="@drawable/local" />

			<LinearLayout
			  android:id="@+id/linear_layout_user_homefr"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center"
			  android:layout_marginStart="5dp"
			  android:layout_marginEnd="5dp"
			  android:gravity="top"
			  android:orientation="horizontal"
			  android:paddingTop="3dp">

			  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:orientation="vertical">

				<ImageView
				  android:layout_width="32dp"
				  android:layout_height="32dp"
				  android:layout_gravity="center"
				  app:srcCompat="@drawable/ic_user" />
				<TextView
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_gravity="center"
				  android:textStyle="bold"
				  android:text="SELAMAT DATANG"
				  android:textColor="@color/mapboxWhite"
				  android:textSize="12sp" />

				<TextView
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_gravity="center"
				  android:textAllCaps="true"
				  android:text="username"
				  android:textColor="@color/mapboxWhite"
				  android:textSize="14sp" />

			  </LinearLayout>

			</LinearLayout>

		  </androidx.cardview.widget.CardView>
		  <!--rv 1-->
		  <ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="10dp">
			<LinearLayout
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginStart="10dp"
			  android:layout_marginEnd="10dp"
			  android:layout_marginBottom="1dp"
			  android:layout_marginTop="1dp"
			  android:gravity="center_horizontal|center_vertical"
			  android:orientation="vertical">

			  <androidx.cardview.widget.CardView
				android:id="@+id/cv_user_child_top1"
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_card_home"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="16dp"
				app:cardElevation="2dp"
				app:contentPadding="0dp">

				<ImageView
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:scaleType="fitEnd"
				  app:srcCompat="@drawable/ic_undraw_lost_bqr2" />

				<TextView
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:padding="5dp"
				  android:text="Histori Pencarian"
				  android:textAllCaps="true"
				  android:textAppearance="@style/TextAppearance.AppCompat.Small"
				  android:textStyle="bold" />

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <LinearLayout
					android:layout_width="match_parent"
					android:layout_height="15dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="-1dp"
					android:layout_marginEnd="-1dp"
					android:background="@color/colorPrimary">

				  </LinearLayout>

				</RelativeLayout>

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <TextView
					android:id="@+id/tv_user_count_history"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="10dp"
					android:layout_marginBottom="20dp"
					android:text="24" />

				  <TextView
					android:id="@+id/tv1_user"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="5dp"
					android:layout_marginBottom="20dp"
					android:layout_toEndOf="@+id/tv_user_count_history"
					android:text="History" />

				</RelativeLayout>

			  </androidx.cardview.widget.CardView>
			  <androidx.cardview.widget.CardView
				android:id="@+id/cv_user_child_top2"
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_card_home"
				android:layout_marginTop="8dp"
				android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp"
				android:layout_weight="0.5"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="16dp"
				app:cardElevation="2dp">

				<ImageView
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:scaleType="fitEnd"
				  app:srcCompat="@drawable/ic_undraw_searching_p5ux" />

				<TextView
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:padding="5dp"
				  android:text="Cari Baru"
				  android:textAllCaps="true"
				  android:textAppearance="@style/TextAppearance.AppCompat.Small"
				  android:textStyle="bold" />

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <LinearLayout
					android:layout_width="match_parent"
					android:layout_height="15dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="-1dp"
					android:layout_marginEnd="-1dp"
					android:background="@color/colorPrimary">

				  </LinearLayout>

				</RelativeLayout>
			  </androidx.cardview.widget.CardView>
			  <androidx.cardview.widget.CardView
				android:id="@+id/cv_user_child_location"
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_card_home"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginTop="8dp"
				android:layout_weight="0.5"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="2dp">

				<ImageView
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:scaleType="fitEnd"
				  app:srcCompat="@drawable/ic_undraw_destination_6jtj" />

				<TextView
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:padding="5dp"
				  android:text="Lihat Map Data"
				  android:textAllCaps="true"
				  android:textAppearance="@style/TextAppearance.AppCompat.Small"
				  android:textStyle="bold" />

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <LinearLayout
					android:layout_width="match_parent"
					android:layout_height="15dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="-1dp"
					android:layout_marginEnd="-1dp"
					android:background="@color/colorPrimary">

				  </LinearLayout>

				</RelativeLayout>

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <TextView
					android:id="@+id/tv_user_count_lokasi"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="5dp"
					android:layout_marginBottom="20dp"
					android:layout_toEndOf="@+id/tv2_user"
					android:text="20" />

				  <TextView
					android:id="@+id/tv2_user"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="10dp"
					android:layout_marginBottom="20dp"

					android:text="Data" />

				</RelativeLayout>

			  </androidx.cardview.widget.CardView>
			  <androidx.cardview.widget.CardView
				android:id="@+id/cv_user_child_bot2"
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_card_home"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:layout_weight="0.5"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="2dp">

				<TextView
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:padding="5dp"
				  android:text="About"
				  android:textAllCaps="true"
				  android:textAppearance="@style/TextAppearance.AppCompat.Small"
				  android:textStyle="bold" />

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:gravity="center_horizontal|center_vertical">

				  <ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:tint="@color/mapboxBlue"
					app:srcCompat="@drawable/ic_info_outline_black_24dp" />

				</RelativeLayout>

				<RelativeLayout
				  android:layout_width="match_parent"
				  android:layout_height="match_parent">

				  <LinearLayout
					android:layout_width="match_parent"
					android:layout_height="15dp"
					android:layout_alignParentBottom="true"
					android:layout_marginStart="-1dp"
					android:layout_marginEnd="-1dp"
					android:background="@color/colorPrimary">

				  </LinearLayout>

				</RelativeLayout>
			  </androidx.cardview.widget.CardView>

			</LinearLayout>
		  </ScrollView>


		</LinearLayout>
<!--	  </ScrollView>-->
  </RelativeLayout>
</FrameLayout>