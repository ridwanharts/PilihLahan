<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".mainViewFragment.HomeUserFragment">

  <RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:weightSum="2"
	  android:paddingTop="3dp"
	  android:gravity="top"
	  android:layout_marginStart="5dp"
	  android:layout_marginEnd="5dp"
	  android:id="@+id/linear_layout_user_homefr"
	  android:orientation="horizontal">

	  <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="2dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
		  android:layout_width="48dp"
		  android:layout_height="48dp"
		  android:layout_gravity="end"
		  app:srcCompat="@drawable/ic_user" />
		<TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_marginStart="5dp"
		  android:textSize="14sp"
		  android:text="username"/>

	  </LinearLayout>

	</RelativeLayout>

	<RelativeLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="10dp"
	  android:layout_below="@+id/linear_layout_user_homefr"
	  android:layout_marginBottom="8dp">

	  <androidx.cardview.widget.CardView
		android:id="@+id/cv_user_top"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:clickable="true"
		android:focusable="true"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:foreground="?android:attr/selectableItemBackground"
		app:cardCornerRadius="8dp"
		app:cardElevation="-3dp"
		app:contentPadding="0dp">

		<ImageView
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:adjustViewBounds="true"
		  android:cropToPadding="true"
		  android:scaleType="centerCrop"
		  app:srcCompat="@drawable/local" />
		<LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="12dp"
		  android:background="@color/mapboxGreen"
		  android:layout_marginTop="108dp">

		</LinearLayout>

	  </androidx.cardview.widget.CardView>
	  <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:layout_marginTop="-12dp"
		android:layout_below="@+id/cv_user_top"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:id="@+id/linear_user_homef_atas"
		android:orientation="horizontal">

		<androidx.cardview.widget.CardView
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:clickable="true"
		  android:focusable="true"
		  android:foreground="?android:attr/selectableItemBackground"
		  app:cardBackgroundColor="@color/mapboxGreen"
		  app:cardCornerRadius="8dp"
		  app:cardElevation="-3dp"
		  app:contentPadding="0dp">

		  <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="2dp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:weightSum="1.5">

		  </LinearLayout>

		</androidx.cardview.widget.CardView>

	  </LinearLayout>

	  <ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/linear_user_homef_atas">

		<LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  android:layout_marginTop="4dp"
		  android:layout_marginBottom="4dp"
		  android:orientation="vertical">
		  <!--rv 1-->
		  <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/size_parent_linear_card_home"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="1">

			<androidx.cardview.widget.CardView
			  android:id="@+id/cv_user_child_top1"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/size_card_home"
			  android:clickable="true"
			  android:focusable="true"
			  android:layout_weight="0.5"
			  android:layout_marginStart="8dp"
			  android:layout_marginEnd="8dp"
			  android:foreground="?android:attr/selectableItemBackground"
			  app:cardCornerRadius="8dp"
			  app:cardElevation="5dp">
			  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Histori Pencarian"
				android:padding="5dp"
				android:textStyle="bold"
				android:textAllCaps="true"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical">

				<ImageView
				  android:layout_width="50dp"
				  android:layout_height="50dp"
				  android:tint="@color/mapboxGreen"
				  app:srcCompat="@drawable/ic_history" />

			  </RelativeLayout>
			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="15dp"
				  android:layout_marginStart="-1dp"
				  android:layout_marginEnd="-1dp"
				  android:background="@color/mapboxGreen"
				  android:layout_alignParentBottom="true">

				</LinearLayout>

			  </RelativeLayout>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="20dp"
				  android:layout_marginEnd="5dp"
				  android:layout_toStartOf="@+id/tv1_user"
				  android:id="@+id/tv_user_count_history"
				  android:text="24"
				  android:layout_alignParentBottom="true"/>
				<TextView
				  android:id="@+id/tv1_user"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="20dp"
				  android:layout_marginEnd="10dp"
				  android:text="History"
				  android:layout_alignParentBottom="true"
				  android:layout_alignParentEnd="true"/>

			  </RelativeLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
			  android:id="@+id/cv_user_child_top2"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/size_card_home"
			  android:layout_weight="0.5"
			  android:clickable="true"
			  android:focusable="true"
			  android:layout_marginEnd="8dp"
			  android:foreground="?android:attr/selectableItemBackground"
			  app:cardCornerRadius="8dp"
			  app:cardElevation="5dp"
			  app:contentPadding="0dp">

			  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Cari Baru"
				android:padding="5dp"
				android:textStyle="bold"
				android:textAllCaps="true"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical">

				<ImageView
				  android:layout_width="50dp"
				  android:layout_height="50dp"
				  android:tint="@color/mapboxGreen"
				  app:srcCompat="@drawable/ic_search" />

			  </RelativeLayout>
			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="15dp"
				  android:layout_marginStart="-1dp"
				  android:layout_marginEnd="-1dp"
				  android:background="@color/mapboxGreen"
				  android:layout_alignParentBottom="true">

				</LinearLayout>

			  </RelativeLayout>
			</androidx.cardview.widget.CardView>

		  </LinearLayout>
		  <!--end rv 1-->

		  <!--start cv 2-->
		  <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/size_parent_linear_card_home"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="1">

			<androidx.cardview.widget.CardView
			  android:id="@+id/cv_user_child_location"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/size_card_home"
			  android:clickable="true"
			  android:focusable="true"
			  android:layout_marginEnd="8dp"
			  android:layout_marginStart="8dp"
			  android:foreground="?android:attr/selectableItemBackground"
			  android:layout_weight="0.5"
			  app:cardCornerRadius="8dp"
			  app:cardElevation="5dp">

			  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Lihat Map Data"
				android:padding="5dp"
				android:textStyle="bold"
				android:textAllCaps="true"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical">

				<ImageView
				  android:layout_width="50dp"
				  android:layout_height="50dp"
				  android:tint="@color/mapboxGreen"
				  app:srcCompat="@drawable/ic_map" />

			  </RelativeLayout>
			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="15dp"
				  android:layout_marginStart="-1dp"
				  android:layout_marginEnd="-1dp"
				  android:background="@color/mapboxGreen"
				  android:layout_alignParentBottom="true">

				</LinearLayout>

			  </RelativeLayout>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="20dp"
				  android:layout_marginEnd="5dp"
				  android:layout_toStartOf="@+id/tv2_user"
				  android:id="@+id/tv_user_count_lokasi"
				  android:text="20"
				  android:layout_alignParentBottom="true"/>
				<TextView
				  android:id="@+id/tv2_user"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="20dp"
				  android:layout_marginEnd="10dp"
				  android:text="Data"
				  android:layout_alignParentBottom="true"
				  android:layout_alignParentEnd="true"/>

			  </RelativeLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
			  android:id="@+id/cv_user_child_bot2"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/size_card_home"
			  android:clickable="true"
			  android:layout_marginEnd="8dp"
			  android:layout_weight="0.5"
			  android:focusable="true"
			  android:foreground="?android:attr/selectableItemBackground"
			  app:cardCornerRadius="8dp"
			  app:cardElevation="5dp">

			  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="About"
				android:padding="5dp"
				android:textStyle="bold"
				android:textAllCaps="true"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical">

				<ImageView
				  android:layout_width="50dp"
				  android:layout_height="50dp"
				  android:tint="@color/mapboxGreen"
				  app:srcCompat="@drawable/ic_info_outline_black_24dp" />

			  </RelativeLayout>
			  <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="15dp"
				  android:layout_marginStart="-1dp"
				  android:layout_marginEnd="-1dp"
				  android:background="@color/mapboxGreen"
				  android:layout_alignParentBottom="true">

				</LinearLayout>

			  </RelativeLayout>
			</androidx.cardview.widget.CardView>
		  </LinearLayout>
		</LinearLayout>
	  </ScrollView>
	</RelativeLayout>
	<!--end cv 2-->
  </RelativeLayout>

</FrameLayout>