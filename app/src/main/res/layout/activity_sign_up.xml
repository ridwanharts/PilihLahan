<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mapboxWhite"
    android:orientation="vertical"
    tools:context=".Activity.LogInSignUp.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Sign Up"
            android:textColor="#171717"
            android:textSize="32.6sp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:hint="Username"
			android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:textColor="@color/mapboxBlack"
            android:textColorHint="@color/mapboxBlack" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:hint="Email Address"
			android:fontFamily="@font/montserrat_regular"
            android:inputType="textEmailAddress"
            android:textColor="@color/mapboxBlack"
            android:textColorHint="@color/mapboxBlack" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:hint="Password"
            android:inputType="textPassword"
			android:fontFamily="@font/montserrat_regular"
            android:maxLength="6"
            android:textColor="@color/mapboxBlack"
            android:textColorHint="@color/mapboxBlack" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:id="@+id/et_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:hint="No HP"
			android:fontFamily="@font/montserrat_regular"
            android:inputType="textPassword"
            android:maxLength="6"
            android:textColor="@color/mapboxBlack"
            android:textColorHint="@color/mapboxBlack" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rect_grayoutline"
            android:gravity="center"
            android:padding="20dp"
            android:text="Register"
			android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/mapboxBlack"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/back_login_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/rect_blue"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingRight="40dp"
            android:paddingBottom="20dp"
			android:fontFamily="@font/montserrat_regular"
            android:text="Back to Login"
            android:textColor="@color/mapboxWhite"
            android:textSize="15.4sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black_semi_transparent"
        android:padding="10dp"
        android:visibility="invisible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_loading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center">

            </ProgressBar>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>